@model IEnumerable<DieChart.Entity.DieEntity>

@{
    ViewBag.Title = "Index";
    
}

<h2>Summary of Die</h2>
<form action="~/DieChart/Search" method="post">
    <div class="form-actions">
        <div class="input-group">
            
            <span class="input-group-btn">
                <input tabindex="1" placeholder="Type your search here ..." style="width:200px" type="text" class="form-control" value="" name="Search">
                <button class="btn btn-sm btn-info no-radius" type="submit">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (!Request.Browser.IsMobileDevice)
{
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price_val)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Glass_Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID1_ID2)
        </th>
        <th></th>
    </tr>
   
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_val)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Glass_Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID1_ID2)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            
        </td>
    </tr>
}

</table>

  <!-- HTML here for mobile device -->
}
else
{
 
<table class="table table-striped ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
            <br />
            @Html.DisplayNameFor(model => model.Description)
            <br />
            <font color="blue"> @Html.DisplayNameFor(model => model.Id1) | @Html.DisplayNameFor(model => model.Id2) | @Html.DisplayNameFor(model => model.Length)</font>
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            
                <b>@Html.DisplayFor(modelItem => item.Code)</b>
                <br />
                @Html.DisplayFor(modelItem => item.Description) 
                <br />
                <font color="blue">@Html.DisplayFor(modelItem => item.Id1) | @Html.DisplayFor(modelItem => item.Id2) | @Html.DisplayFor(modelItem => item.Length)</font>
    
                <font color="brown">
                    @if (item.Price_val != 0) 
                    {
                        <br />
                        <b>Price: </b>
                        @Html.DisplayFor(modelItem => item.Price_val)
                        
                    } 
                    @if (item.Glass_Size != null && item.Glass_Size.Trim() != "")
                    {
                        <br />
                        <b>G Size: </b>
                        @Html.DisplayFor(modelItem => item.Glass_Size)
                        
                    }
                    @if (item.ID1_ID2 != null && item.ID1_ID2.Trim() != "")
                    {
                        <br />
                        <b>G ID1-2: </b>
                        @Html.DisplayFor(modelItem => item.ID1_ID2)
                        
                    }
                    <br />
                    <div class="pull-right">
                        <b>Links: </b>@Html.ActionLink("E", "Edit", new { id = item.id }) | @Html.ActionLink("V", "Details", new { id = item.id })
                    </div>
            </td>
        </tr>
    }

</table>
 <!-- HTML for desktop device -->
}
