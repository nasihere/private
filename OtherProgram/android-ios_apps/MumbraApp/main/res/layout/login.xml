<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ltegray"
    android:padding="5dp"
    tools:context=".login">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="MumbraApp Community will send a one time SMS message to verify your phone number. "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Please enter your mobile number"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/tvSelectAgeGroup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvLoginPassword"
        android:layout_alignStart="@+id/tvLoginPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="+91"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:hint="9833XXXXX"
        android:layout_toLeftOf="@+id/btnSignin"
        android:layout_toRightOf="@+id/textView3"
        android:background="@color/c_white"
        android:ems="10"
        android:inputType="number"
        android:text="@string/emptystring" >


    </EditText>

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtPhoneNo"
        android:layout_alignBottom="@+id/edtPhoneNo"
        android:layout_alignParentRight="true"
        android:text="SMS me" />

    <TextView
        android:id="@+id/tvsixdigit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/btnSignin"
        android:layout_below="@+id/btnSignin"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Enter the 6-digit code that you get and tap 'Verify me'"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edtSmsCodeVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:ems="10"
        android:inputType="number"
        android:text="@string/emptystring"
        android:layout_alignTop="@+id/btnSmsVerify"
        android:layout_toLeftOf="@+id/btnSmsVerify"
        android:layout_alignBottom="@+id/btnSmsVerify"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/tvLoginPassword"
        android:layout_toEndOf="@+id/tvLoginPassword" />

    <Button
        android:id="@+id/btnSmsVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvsixdigit"
        android:text="Verify Me"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/edtSmsCodeVerify"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edtSmsCodeVerify" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@color/white"
        android:hint="ex: Nasz"
        android:id="@+id/edtNameLogin"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView1">
    <requestFocus></requestFocus>
    </EditText>





    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Gender:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/tvLoginPassword"
        android:layout_alignStart="@+id/tvLoginPassword"
        android:layout_alignBottom="@+id/radioSex" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNameLogin"
        android:layout_toRightOf="@+id/textView12"
        android:layout_alignRight="@+id/edtNameLogin"
        android:layout_alignEnd="@+id/edtNameLogin">
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/rdGenderMale"
        android:background="@color/c_white"
        android:checked="true" />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/rdGenderFemale"
        android:layout_alignBottom="@+id/rdGenderMale"
        android:background="@color/c_white"
        android:layout_toRightOf="@+id/rdGenderMale"
        android:checked="false"
        android:layout_alignRight="@+id/edtNameLogin"
        android:layout_alignEnd="@+id/edtNameLogin" />
</RadioGroup>
    <TextView
        android:id="@+id/tvAgeGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Age:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tvSelectAgeGroup"
        android:layout_toStartOf="@+id/tvSelectAgeGroup" />

    <TextView
        android:id="@+id/tvSelectAgeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="tap here to select age group"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/tvLoginAddress"
        android:layout_toRightOf="@+id/textView14"
        android:layout_alignRight="@+id/btnSignin"
        android:layout_alignEnd="@+id/btnSignin" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:text="Address:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/tvLoginPassword"
        android:layout_alignStart="@+id/tvLoginPassword" />

    <EditText
        android:id="@+id/tvLoginAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp"
        android:hint="ex: flat no, building name, area"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/radioSex"
        android:layout_alignEnd="@+id/radioSex"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

</RelativeLayout>